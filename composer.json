{
  "name": "kavinsky/clover-to-bitbucket",
  "description": "Report clover coverage to bitbucket",
  "minimum-stability": "stable",
  "license": "Apache-2.0",
  "authors": [
    {
      "name": "Joris van Eijden",
      "email": "joris.vaneijden@oneshoe.nl"
    }
  ],
  "require": {
    "php": "^7.0",
    "symfony/filesystem": "^5.3",
    "symfony/console": "^5.3",
    "nategood/httpful": "^0.3.2",
    "ext-simplexml": "*",
    "ext-json": "*"
  },
  "require-dev": {
    "roave/security-advisories": "dev-master",
    "phpunit/phpunit": "^9.5",
    "squizlabs/php_codesniffer": "^3.6.2"
  },
  "autoload": {
    "psr-4": {
      "Kavinsky\\CloverToBitbucket\\": "src"
    }
  },
  "scripts": {
    "test": "./vendor/bin/phpunit",
    "sniff": "./vendor/bin/phpcs"
  },
  "bin": [
    "clover-to-bitbucket"
  ]
}
